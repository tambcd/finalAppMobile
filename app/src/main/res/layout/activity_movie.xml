<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".entertain.MovieActivity">

    <EditText
        android:id="@+id/etSearch_AddRoomChat"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:drawableRight="@drawable/ic_search"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="657dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etSearch_AddRoomChat">

        <LinearLayout
            android:id="@+id/linearLoiMoi"
            android:layout_width="match_parent"
            android:layout_height="265dp"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/textViewLoiMoi"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:scrollbarStyle="outsideOverlay"
                android:text="Lời mời kết bạn"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtNotFound"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="Không có kết quả phù hợp "
                android:textSize="24sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <ListView
                android:id="@+id/listLoiMoi"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="vertical"></ListView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearDeXuat"
            android:layout_width="match_parent"
            android:layout_height="325dp"
            android:layout_marginTop="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="Những người bạn có thể biết"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtNotFound1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="Không có kết quả phù hợp "
                android:textSize="24sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <ListView
                android:id="@+id/listDeXuat"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="vertical">

            </ListView>

        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>